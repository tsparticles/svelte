{
  "name": "svelte-particles",
  "version": "2.12.0",
  "description": "Official tsParticles Svelte Component - Easily create highly customizable particle, confetti and fireworks animations and use them as animated backgrounds for your website. Ready to use components available also for Web Components, React, Vue.js (2.x and 3.x), Angular, jQuery, Preact, Riot.js, Solid.js, Inferno.",
  "scripts": {
    "build": "pnpm run prettify:src && pnpm run prettify:readme && rollup -c",
    "build:ci": "pnpm run prettify:ci:src && pnpm run prettify:ci:readme && rollup -c",
    "prettify:ci:src": "prettier --check --plugin-search-dir=. ./src/*",
    "prettify:ci:readme": "prettier --check --plugin-search-dir=. ./README.md",
    "prettify:src": "prettier --write --plugin=\"prettier-plugin-svelte\" ./src/*",
    "prettify:readme": "prettier --write --plugin=\"prettier-plugin-svelte\" ./README.md",
    "validate": "svelte-check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tsparticles/svelte.git",
    "directory": "components/svelte"
  },
  "keywords": [
    "front-end",
    "frontend",
    "tsparticles",
    "particles.js",
    "particlesjs",
